{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "compile": "node scripts/compile.js",
    "ts:clean": "find . -name \"*.tsbuildinfo\" -type f -delete && rm -rf packages/*/dist",
    "kite": "yarn ts-node --transpile-only --project ./packages/kite/tsconfig.json ./packages/kite/src/app.ts",
    "fell": "yarn ts-node --transpile-only --project ./packages/fell/tsconfig.json ./packages/fell/src/app.ts",
    "fl": "yarn ts-node --transpile-only --project ./packages/cli/tsconfig.json ./packages/cli/src/app.ts",
    "test": "yarn jest",
    "lint": "yarn ts:lint && yarn sass:lint",
    "sass:lint": "yarn stylelint packages/kite/**/*.scss",
    "ts:lint": "yarn eslint 'packages/**/*.{ts,tsx}'",
    "asciidoc:scaffold:lint": "cd ./packages/asciidoc && yarn scaffold:lint",
    "styleguide:develop": "cd ./packages/styleguide && yarn start",
    "styleguide:build": "cd ./packages/styleguide && yarn build",
    "evans:build:en": "cd packages/evans && yarn build:en",
    "evans:build:es": "cd packages/evans && yarn build:es",
    "evans:develop:en": "cd packages/evans && yarn develop:en",
    "evans:develop:es": "cd packages/evans && yarn develop:es",
    "evans:ts:check": "cd packages/evans && yarn ts:check",
    "jones:develop": "cd packages/jones && yarn develop",
    "jones:build": "cd packages/jones && yarn build",
    "cover:develop": "cd packages/cover && yarn develop",
    "cover:build": "cd packages/cover && yarn build",
    "cover:ts:check": "cd packages/cover && yarn ts:check",
    "test:integration": "cd packages/functions && yarn test:integration && cd ../ui && yarn test:integration",
    "bot:deploy": "cd ./packages/bot && yarn deploy",
    "bot:develop": "node ./packages/bot/dist/scripts/run.js",
    "bot:receive": "cd packages/bot && yarn receive",
    "format:yml": "yarn prettier \"packages/friends/**/*.yml\" --write",
    "format:all": "yarn prettier \"packages/**/*.{ts,tsx,js,css,scss,yml}\" --write",
    "storybook": "cd packages/ui && yarn storybook",
    "preflight": "yarn lint && yarn kite en/robert-barclay/recreation-entertainment/updated -t all && yarn test && yarn evans:ts:check && yarn cover:ts:check && yarn ts:clean && yarn compile all && yarn styleguide:build && yarn evans:build:en && yarn evans:build:es && yarn jones:build && yarn cover:build"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "prettier": "^1.16.4",
    "typescript": "3.6.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-no-only-tests": "^2.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.0.0",
    "lerna": "^3.1.4",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "ts-jest": "^24.0.2",
    "webpack-cli": "^3.2.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
