{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "postinstall": "yarn ts:compile",
    "ts:compile": "yarn types:compile && yarn friends:compile && yarn hilkiah:compile && yarn asciidoc:compile && yarn cli:compile",
    "ts:watch": "yarn types:compile --watch & yarn friends:compile --watch & yarn hilkiah:compile --watch & yarn asciidoc:compile --watch && yarn cli:compile --watch",
    "kite": "node ./packages/kite/kite.js",
    "fell": "node ./packages/fell/fell.js",
    "mod": "node ./packages/mod/mod.js",
    "phipps": "php ./packages/phipps/phipps",
    "test": "yarn js:test && yarn ts:test && yarn php:test",
    "js:test": "yarn jest",
    "ts:test": "cd ./packages/asciidoc && yarn test -w=2 && cd ../evans && yarn test -w=2 && cd ../jones && yarn test -w=2 && cd ../friends && yarn test -w=2 && cd ../hilkiah && yarn test -w=2 && cd ../fell && yarn test -w=2",
    "php:test": "yarn phipps:test",
    "phipps:test": "php ./packages/phipps/vendor/bin/phpunit -c packages/phipps/phpunit.xml",
    "phipps:test:watch": "cd ./packages/phipps && php vendor/bin/phpunit-watcher watch",
    "lint": "yarn js:lint && yarn sass:lint",
    "js:lint": "yarn eslint .",
    "sass:lint": "yarn stylelint packages/kite/**/*.scss",
    "asciidoc:scaffold:lint": "cd ./packages/asciidoc && yarn scaffold:lint",
    "asciidoc:compile": "cd ./packages/asciidoc && yarn compile",
    "api:develop": "cd ./packages/api && yarn start",
    "api:deploy": "cd ./packages/api && yarn deploy",
    "styleguide:develop": "cd ./packages/styleguide && yarn start",
    "styleguide:build": "cd ./packages/styleguide && yarn build",
    "hilkiah:compile": "cd ./packages/hilkiah && yarn compile",
    "evans:build:en": "cd packages/evans && yarn build:en",
    "evans:build:es": "cd packages/evans && yarn build:es",
    "evans:develop:en": "cd packages/evans && yarn develop:en",
    "evans:develop:es": "cd packages/evans && yarn develop:es",
    "evans:ts:check": "cd packages/evans && yarn ts:check",
    "jones:develop": "cd packages/jones && yarn develop",
    "jones:build": "cd packages/jones && yarn build",
    "cli:compile": "cd packages/cli && yarn compile",
    "friends:compile": "cd ./packages/friends && yarn compile",
    "bot:develop": "node ./packages/bot/scripts/run.js",
    "bot:receive": "cd packages/bot && yarn receive",
    "types:compile": "cd packages/types && yarn compile",
    "preflight": "yarn lint && yarn test && yarn flow && yarn evans:ts:check && yarn ts:compile && yarn styleguide:build && yarn evans:build:en && yarn evans:build:es && yarn jones:build"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-no-only-tests": "^2.0.1",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.92.0",
    "jest": "^24.0.0",
    "lerna": "^3.1.4",
    "prettier": "^1.16.4",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "ts-jest": "^24.0.0",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "typescript": "^3.3.3333"
  },
  "workspaces": [
    "packages/evans",
    "packages/kite",
    "packages/friends",
    "packages/hilkiah",
    "packages/phipps",
    "packages/api",
    "packages/cli",
    "packages/fell",
    "packages/styleguide",
    "packages/mod",
    "packages/jones",
    "packages/bot",
    "packages/client",
    "packages/asciidoc",
    "packages/types"
  ]
}
