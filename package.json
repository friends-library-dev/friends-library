{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "styleguide:start": "yarn styleguide:build-frags && cd ./packages/styleguide && yarn start",
    "styleguide:build-frags": "node ./packages/styleguide/src/build-frags.js",
    "format": "yarn prettier --write '**/*.js'",
    "kite": "node ./packages/kite/kite.js",
    "fell": "node ./packages/fell/fell.js",
    "phipps": "php ./packages/phipps/phipps",
    "lint": "yarn eslint .",
    "test": "yarn jest && yarn phipps:test",
    "friends:lint": "yarn eslint packages/friends",
    "kite:lint": "yarn eslint packages/kite",
    "evans:lint": "yarn eslint packages/evans",
    "hilkiah:lint": "yarn eslint packages/hilkiah",
    "color:lint": "yarn eslint packages/color",
    "friends:test": "yarn jest packages/friends",
    "kite:test": "yarn jest packages/kite",
    "evans:test": "yarn jest packages/evans",
    "hilkiah:test": "yarn jest packages/hilkiah",
    "phipps:test": "php ./packages/phipps/vendor/bin/phpunit -c packages/phipps/phpunit.xml",
    "phipps:test:watch": "cd ./packages/phipps && php vendor/bin/phpunit-watcher watch",
    "sass:lint": "yarn stylelint packages/kite/**/*.scss",
    "preflight": "yarn sass:lint && yarn lint && yarn test && yarn flow && cd packages/evans && LANG=en yarn build && LANG=es yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.3",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.3",
    "@babel/preset-env": "^7.0.0-rc.3",
    "@babel/preset-flow": "^7.0.0-rc.3",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-no-only-tests": "^2.0.1",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.82.0",
    "jest": "^23.5.0",
    "lerna": "^3.1.4",
    "prettier": "^1.14.3",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0"
  },
  "workspaces": [
    "packages/evans",
    "packages/kite",
    "packages/friends",
    "packages/hilkiah",
    "packages/phipps",
    "packages/api",
    "packages/color",
    "packages/fell",
    "packages/styleguide"
  ],
  "jest": {
    "errorOnDeprecated": true,
    "testEnvironment": "node",
    "testRegex": "__tests__/.*tests?\\.js"
  }
}
