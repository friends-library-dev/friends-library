{
  "name": "@friends-library/evans",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest src",
    "test:watch": "jest src --watch",
    "start": "yarn start:en",
    "start:en": "yarn sync:en & LANG=en NODE_ENV=development PORT=2222 API_URL=http://localhost:1111 NODE_PATH=src babel-watch src/server/index.js & webpack --mode development --watch",
    "start:es": "yarn sync:es & LANG=es NODE_ENV=development PORT=3333 API_URL=http://localhost:1111 NODE_PATH=src babel-watch --watch es.po src/server/index.js & webpack --mode development --watch",
    "serve": "NODE_ENV=production PORT=4444 NODE_PATH=src babel-watch src/server/index.js",
    "prebuild": "webpack --mode production -p",
    "build": "rimraf build && NODE_PATH=src babel-node build.js",
    "sync:en": "yarn browser-sync start --port 2223 --reload-delay 200 --ui-port 2224 --files src/* --no-notify",
    "sync:es": "yarn browser-sync start --port 2225 --reload-delay 200 --ui-port 2226 --files src/* es.po --no-notify",
    "po:update": "yarn c-3po update es.po src"
  },
  "dependencies": {
    "@friends-library/friends": "1.0.0",
    "asciidoctor.js": "^1.5.7-rc.1",
    "c-3po": "^0.8.1",
    "clean-css": "^4.2.1",
    "express": "^4.16.3",
    "gettext-parser": "^2.0.0",
    "glamor": "^2.20.40",
    "he": "^1.1.1",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0-rc.3",
    "babel-loader": "^8.0.0-beta.6",
    "babel-watch": "monathur/babel-watch.git#ebc252359970458bf2e0a6c417bce3d3dc6d8da7",
    "browser-sync": "^2.23.3",
    "webpack": "^4.6.0",
    "webpack-command": "^0.2.1"
  }
}
