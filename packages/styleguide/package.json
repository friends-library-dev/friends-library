{
  "name": "@friends-library/styleguide",
  "version": "1.0.0",
  "description": "Friends Library document styleguide",
  "main": "src/index.js",
  "author": "Jared Henderson <jared@netrivet.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn sass && yarn webpack-dev-server --mode development --watch --hot",
    "build": "webpack --mode production",
    "prebuild": "yarn sass",
    "sass": "cat src/start.scss ../kite/src/publish/{sass/common.scss,sass/not-mobi7.scss,sass/paging.scss,pdf/sass/base.scss,pdf/sass/typography.scss,pdf/sass/half-title.scss,pdf/sass/original-title.scss,pdf/sass/copyright.scss,pdf/sass/toc.scss,pdf/sass/chapter-heading.scss,pdf/sass/print.scss} src/end.scss | ./node_modules/.bin/node-sass > ./dist/rendered.css"
  },
  "dependencies": {
    "asciidoctor.js": "^1.5.7-rc.1",
    "node-sass": "^4.9.4",
    "react-hot-loader": "^4.3.11",
    "styled-components": "^4.0.2",
    "webpack": "^4.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.8.0",
    "babel-preset-env": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
