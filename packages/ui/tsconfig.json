{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": false,
    "lib": ["es5", "es6", "es7", "es2017", "dom", "ES2019"],
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "references": [
    { "path": "../types" },
    { "path": "../cover-component" },
    { "path": "../friends" }
  ],
  "include": [
    "src/**/*",
    "tailwind.config.ts",
    "../cover-component/src/css",
    "../cover-component/src/LogoIcon.tsx",
    "../cover-component/src/overrides.ts",
    "../cover-component/src/CoverFront.tsx",
    "../cover-component/src/Cover.tsx",
    "../cover-component/src/index.ts"
  ],
  "exclude": ["node_modules", "build", "scripts"]
}
