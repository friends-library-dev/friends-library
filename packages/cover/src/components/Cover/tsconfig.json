{
  "compilerOptions": {
    "outDir": "../../../dist",
    "jsx": "react",
    "target": "es2018",
    "module": "commonjs",
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "validate": false
      }
    ]
  },
  "exclude": ["./__tests__/"]
}
